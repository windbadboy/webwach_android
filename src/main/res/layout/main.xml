<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/todayduty"
    android:text="今日行政值班人员"
    android:textSize="18sp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/dutylv"
        android:layout_below="@id/todayduty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    <RelativeLayout
        android:layout_below="@id/dutylv"
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <GridView

        android:id="@+id/GridView"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="auto_fit"
        android:horizontalSpacing="0.0dp"
        android:verticalSpacing="0.0dp"
        android:columnWidth="120dp"
        android:stretchMode="columnWidth"
        android:gravity="center"></GridView>
        <ImageView
            android:id="@+id/numbersicon"
            android:visibility="invisible"
            android:paddingLeft="60dp"
            android:src="@drawable/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/numbers"
            android:visibility="invisible"
            android:paddingTop="2dp"
            android:paddingLeft="70dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
